<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="new-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" id="post-title" name="post-title" class="form-input" /> 

    <label class="form-label" for="post-body">Post</label>
    <input id="content" name="post-body" class="form-input" /> 

    <p>Created by {{user.username}} on {{format_date date_created}}</p>
    <p>
      <button class="btn btn-primary">Submit</button>
    </p>
  </form>
</div>
<script src="/js/new.js"></script>
