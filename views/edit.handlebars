<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" id="post-title" name="post-title" value="{{post.title}}" class="form-input" /> 

    <label class="form-label" for="post-body">Post</label>
    <input id="content" name="post-body" value="{{post.post_body}}" class="form-input" /> 

    <p>Edited by {{user.username}} on {{format_date date_created}}</p>
    <p>
      <button id="editPost-button" class="btn btn-primary">Update Post</button>
    </p>
    <p>
      <button id="delete-post-btn" class="btn btn-primary">Delete Post</button>
    </p>
  </form>
</div>
<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>

