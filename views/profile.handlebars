<div class="row" id="profile-container">
  <section class="hero is-primary is medium">
    <nav class="navbar">
      <div class="col-auto">
        <h2 class="profileHeader"> Welcome, {{username}}!</h2>
      </div>
        <div> <a id="logout" class="navbar-item">Log Out</a></div>
    </nav>

  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Create a New Post:</h3>

      <form class="form new-post-form">
        <div class="form-group">
          <label for="post-title">post title:</label>
          <input class="form-input" type="text" id="post-title" name="post-title" />
        </div>
        <div class="form-group">
          <label for="post-desc">description:</label>
          <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>

    {{#if post.length}}
    <div class="col-md-6 post-list">
      <h3>Current Post:</h3>

      {{#each post as |post|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>

<script src="./js/profile.js"></script>
<script src="./js/logout.js"></script>
